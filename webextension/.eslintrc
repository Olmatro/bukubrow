{
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"extends": [
		"plugin:react/recommended",
		"standard"
	],
	"env": {
		"es6": true,
		"webextensions": true
	},
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"react/prop-types": "off"
	},
	"settings": {
		"react": {
			"pragma": "h"
		}
	}
}
